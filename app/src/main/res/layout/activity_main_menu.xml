<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naranja1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:clickable="true"
        android:src="@drawable/lupa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/mainmenu_txtv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:text="@string/mainmenuact_txtv_welcome"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/mainmenu_txtv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainmenu_txtv_welcome"
        app:layout_constraintStart_toStartOf="@id/mainmenu_txtv_welcome"

        android:text="Nombre"
        android:textSize="24sp"

        android:textColor="@color/black"/>

    <TextView
    android:id="@+id/mainmenu_txtv_interested"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/mainmenu_txtv_name"
    app:layout_constraintStart_toStartOf="@id/mainmenu_txtv_name"
    android:layout_marginTop="70dp"
    android:text="Hay cientos de materias esperando a que las aprendas "
    android:textSize="24sp"

    android:textColor="@color/black"/>

    <TextView
        android:id="@+id/mainmenu_txtv_search"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="33dp"
        app:layout_constraintEnd_toStartOf="@id/floatingActionButton"
        android:gravity="right"
        android:text="Buscar anuncios"
        android:textSize="24sp"

        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/mainmenu_img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sinfondo"
        app:layout_constraintTop_toBottomOf="@id/mainmenu_txtv_interested"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="259dp" />

</androidx.constraintlayout.widget.ConstraintLayout>